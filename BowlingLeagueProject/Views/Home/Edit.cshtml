@{
}

@model Bowler

<div class="text-center form-group">
    <h1 class="display-4">Add A Bowler to the league</h1>

    <form class="form-group" method="post">
        <label asp-for="TeamID">Team:</label>
        <select class="form-control" asp-for="TeamID">
            <option value="">Select a Team</option>
            @foreach (Team t in ViewBag.Teams)
            {
                <option value="@t.TeamID">@t.TeamName</option>
            }
        </select><br />

        <label asp-for="BowlerFirstName">First Name:</label>
        <input class="form-control" value="@Model.BowlerFirstName" asp-for="BowlerFirstName" /><br />

        <label asp-for="BowlerLastName">Last Name:</label>
        <input class="form-control" asp-for="BowlerLastName" /><br />

        <label asp-for="BowlerMiddleInit">Middle Initial:</label>
        <input class="form-control" asp-for="BowlerMiddleInit" /><br />

        <label asp-for="BowlerAddress">Address:</label>
        <input class="form-control" asp-for="BowlerAddress" /><br />

        <label asp-for="BowlerCity">City:</label>
        <input class="form-control" asp-for="BowlerCity" /><br />

        <label asp-for="BowlerZip">Zip Code:</label>
        <input class="form-control" asp-for="BowlerZip" /><br />

        <label asp-for="BowlerPhoneNumber">Phone Number:</label>
        <input class="form-control" asp-for="BowlerPhoneNumber" /><br />

        <input type="hidden" asp-for="BowlerID" value="@ViewBag.IDs" />

        <button type="submit">Add Bowler</button>

        <div asp-validation-summary="All"></div>

    </form>


</div>
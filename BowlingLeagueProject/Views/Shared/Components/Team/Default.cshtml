@{
}

@model IEnumerable<string>

<div class="btn-block gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-team="" class="btn btn-block btn-outline-secondary">All Players</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-team="@t"
           class="btn-block btn @(ViewBag.SelectedTeam == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
    }


</div>